        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="300" Width="312" Loaded="OxyplotWindow_Loaded" WindowStartupLocation="CenterScreen" Style="{StaticResource PlotWindow}" ScrollViewer.CanContentScroll="True" ResizeMode="NoResize">
    
