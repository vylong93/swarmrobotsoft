<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--General-->
    <SolidColorBrush x:Key="Background" Color="Black"/>
    <SolidColorBrush x:Key="LightBackground" Color="Black"/>

    <SolidColorBrush x:Key="Foreground" Color="White"/>
    <SolidColorBrush x:Key="ForegroundNormal" Color="White"/>
    <SolidColorBrush x:Key="ForegroundHighlighted" Color="White"/>
    <SolidColorBrush x:Key="ForegroundSelected" Color="White"/>
    
    <SolidColorBrush x:Key="BackgroundNormal" Color="Black"/>
    <SolidColorBrush x:Key="BackgroundHighlighted" Color="Gray"/>
    <SolidColorBrush x:Key="BackgroundSelected" Color="LightGray"/>
    <SolidColorBrush x:Key="BorderBrushNormal" Color="White"/>
    <SolidColorBrush x:Key="BorderBrushHighlighted" Color="White"/>
    <SolidColorBrush x:Key="BorderBrushSelected" Color="White"/>

</ResourceDictionary>